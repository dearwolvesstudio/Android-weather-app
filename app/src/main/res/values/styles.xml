<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextViewInColoredCard">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TempTextView">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="HumidityTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="WindSpeedTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
    </style>
</resources>
